<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Optional Sprint Settings form for Task Stages -->
  <record id="view_task_type_form_sprint" model="ir.ui.view">
    <field name="name">project.task.type.form.sprint</field>
    <field name="model">project.task.type</field>
    <field name="priority">50</field>
    <field name="arch" type="xml">
      <form string="Task Stage">
        <sheet>
          <group>
            <field name="name"/>
            <field name="sequence"/>
            <field name="fold"/>
          </group>

          <group string="Sprint Settings">
            <field name="use_in_sprint_board"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

</odoo>
