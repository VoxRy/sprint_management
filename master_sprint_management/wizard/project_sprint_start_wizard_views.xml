<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="project_sprint_start_wizard_view_form" model="ir.ui.view">
    <field name="name">project.sprint.start.wizard.form</field>
    <field name="model">project.sprint.start.wizard</field>
    <field name="arch" type="xml">
      <form string="Start Sprint">
          <div class="alert alert-info py-2" role="alert">
            <i class="fa fa-info-circle mr-1"/>
            <strong><field name="task_count" readonly="1" nolabel="1"/></strong> issues will be included in this sprint.
          </div>

          <group>
            <group>
              <field name="project_id" readonly="1"/>
              <field name="sprint_id" attrs="{'invisible': [('sprint_id', '!=', False)]}" options="{'no_create': True}"/>
              <field name="name"/>
              <field name="duration" widget="selection"/>
            </group>
            <group>
              <field name="start_date"/>
              <field name="end_date" attrs="{'readonly': [('duration', '!=', 'custom')], 'required': True}"/>
            </group>
          </group>

          <group string="Sprint goal" colspan="4">
            <field name="goal" nolabel="1" placeholder="What do we want to achieve in this sprint?"/>
          </group>

          <notebook>
            <page string="Tasks" name="tasks">
                <field name="task_ids" domain="[('project_id', '=', project_id), ('sprint_id', '=', False)]">
                    <tree>
                        <field name="name"/>
                        <field name="user_ids" widget="many2many_avatar_user"/>
                        <field name="stage_id"/>
                    </tree>
                </field>
            </page>
          </notebook>

        <footer>
          <button string="Start Sprint" name="action_start_sprint" type="object" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>

