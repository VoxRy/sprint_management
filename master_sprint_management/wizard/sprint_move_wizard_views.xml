<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="project_task_move_sprint_view_form" model="ir.ui.view">
    <field name="name">project.task.move.sprint.form</field>
    <field name="model">project.task.move.sprint</field>
    <field name="arch" type="xml">
      <form string="Move Tasks to Sprint">
        <group>
          <field name="project_id" readonly="1"/>
          <field name="sprint_id" options="{'no_create': True}"/>
          <field name="task_count" readonly="1"/>
        </group>

        <group string="Selected Tasks" colspan="4">
          <field name="task_ids" nolabel="1" readonly="1">
            <tree>
              <field name="name"/>
              <field name="epic_id"/>
              <field name="stage_id"/>
              <field name="user_ids" widget="many2many_tags"/>
            </tree>
          </field>
        </group>

        <footer>
          <button string="Move to Sprint" name="action_move_tasks" type="object" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>
